rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can manage their own food entries
    match /food_entries/{document} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.user_id;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.user_id;
    }
    
    // Users can manage their own symptom entries
    match /symptom_entries/{document} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.user_id;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.user_id;
    }
    
    // Users can manage their own profile
    match /user_profiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can manage their own custom foods
    match /custom_foods/{document} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.user_id;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.user_id;
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}